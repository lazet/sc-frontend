<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:lcf="org.lcf.*"
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600" width="100%" height="100%" creationComplete="appInit(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import rpc.RpcService;
			
			import sign.SignOn;
			
			protected function appInit(event:FlexEvent):void
			{
				Security.loadPolicyFile("http://localhost:8080/tcs/crossdomain.xml");
				//加载RPC服务
				var rpcClient:RpcService = new RpcService("http://localhost:8080/tcs/api/");
				mainView.container.put("RPC_Service", rpcClient)
				//加载登录页面
				var signOn:SignOn = new SignOn();
				mainView.container.put("signOnObject", signOn)
					
				mainView.open("signOn","登录",signOn);
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<lcf:Overlay id="mainView" width="100%" height="100%"/>
</s:Application>
