<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" width="100%"
			    resize="itemrenderer1_resizeHandler(event)">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.ResizeEvent;

			protected function itemrenderer1_resizeHandler(event:ResizeEvent):void
			{
				c1.right = Math.floor(this.width/3);
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Label text="{this.data[0]}" left="0"/>
	<s:Label text="{this.data[1]}" id="c1"/>
	<s:Label text="{this.data[2]}" right="0"/>
</s:ItemRenderer>
